<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/top"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Editing"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_done" />
    </RelativeLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:layout_above="@+id/bootomlay">

        <FrameLayout
            android:id="@+id/frm_Main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/org_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/Img_light"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY" />

            <FrameLayout
                android:id="@+id/fl_Sticker"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/ll_detail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="3dp"
                android:visibility="gone">

                <SeekBar
                    android:id="@+id/seek_brightness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="380"
                    android:progress="190"
                    android:visibility="gone" />


                <LinearLayout
                    android:id="@+id/ll_effect_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorLite"
                    android:gravity="center"
                    android:visibility="visible">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ef_original"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/value_2"
                                android:scaleType="fitXY"
                                android:src="@drawable/flower" />

                            <ImageView
                                android:id="@+id/ef1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/value_2"
                                android:scaleType="fitXY"
                                android:src="@drawable/flower" />

                            <ImageView
                                android:id="@+id/ef2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/value_2"
                                android:scaleType="fitXY"
                                android:src="@drawable/flower" />

                            <ImageView
                                android:id="@+id/ef3"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/value_2"
                                android:scaleType="fitXY"
                                android:src="@drawable/flower"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/ef4"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/value_2"
                                android:scaleType="fitXY"
                                android:src="@drawable/flower" />

                            <ImageView
                                android:id="@+id/ef5"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/value_2"
                                android:scaleType="fitXY"
                                android:src="@drawable/flower" />

                            <ImageView
                                android:id="@+id/ef6"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/value_2"
                                android:scaleType="fitXY"
                                android:src="@drawable/flower" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/value_2"
                                android:scaleType="fitXY"
                                android:src="@drawable/flower" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/value_2"
                                android:scaleType="fitXY"
                                android:src="@drawable/flower"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/ef9"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/value_2"
                                android:scaleType="fitXY"
                                android:src="@drawable/flower" />

                            <ImageView
                                android:id="@+id/ef10"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/value_2"
                                android:scaleType="fitXY"
                                android:src="@drawable/flower"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/ef11"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/value_2"
                                android:scaleType="fitXY"
                                android:src="@drawable/flower"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/ef12"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/value_2"
                                android:scaleType="fitXY"
                                android:src="@drawable/flower"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/ef13"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/value_2"
                                android:scaleType="fitXY"
                                android:src="@drawable/flower"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/ef14"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/value_2"
                                android:scaleType="fitXY"
                                android:src="@drawable/flower" />

                            <ImageView
                                android:id="@+id/ef15"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/value_2"
                                android:scaleType="fitXY"
                                android:src="@drawable/flower" />

                            <ImageView
                                android:id="@+id/ef16"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/value_2"
                                android:scaleType="fitXY"
                                android:src="@drawable/flower" />

                            <ImageView
                                android:id="@+id/ef17"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/value_2"
                                android:scaleType="fitXY"
                                android:src="@drawable/flower" />

                            <ImageView
                                android:id="@+id/ef18"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/value_2"
                                android:scaleType="fitXY"
                                android:src="@drawable/flower" />

                            <ImageView
                                android:id="@+id/ef19"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/value_2"
                                android:scaleType="fitXY"
                                android:src="@drawable/flower" />

                            <ImageView
                                android:id="@+id/ef20"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/value_2"
                                android:scaleType="fitXY"
                                android:src="@drawable/flower" />

                            <ImageView
                                android:id="@+id/ef21"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/value_2"
                                android:scaleType="fitXY"
                                android:src="@drawable/flower" />

                            <ImageView
                                android:id="@+id/ef22"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="@dimen/value_2"
                                android:scaleType="fitXY"
                                android:src="@drawable/flower" />
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_above="@+id/bottom"
        android:id="@+id/bootomlay"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="55dp"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:id="@+id/ll_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_effect"
                android:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Effect"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="visible" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:src="@drawable/ic_text"
                android:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Text"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sticker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_stickers"
                android:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Sticker"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_Rotate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/ic_flip"
                android:tint="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Rotate"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_Flip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/ic_flip"
                android:tint="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Flip"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="vertical"
        android:background="@color/accent"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom">

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            ads:adSize="320x50"
            ads:adUnitId="@string/banner_footer"/>
    </RelativeLayout>
</RelativeLayout>
